<h1>タスク一覧</h1>


<% if @tasks.any? %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>id</th>
        <th>ユーザー</th>
        <th>タスク</th>
        <th>ステータス</th>
      </tr>
    </thead>
    <tbody>
      <% @tasks.each do |task| %>
        <tr>
          <td><%= link_to task.id, task %></td>
          <td><%= task.user.name %></td>
          <td><%= task.content %></td>
          <td><%= task.status %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div>
    <%= paginate @tasks %>
  </div>
<% end %>

<% if logged_in? %>
  <%= link_to '新規タスクの登録', new_task_path, class: "btn btn-primary" %>
<% else %>
  <%= link_to 'Sign up now!', signup_path, class: 'btn btn-lg btn-primary' %>
  <%= link_to 'Log in!', login_path, class: 'btn btn-lg btn-primary' %>
<% end %>

