<%= form_for(task) do |f| %>
  <% if task.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% task.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.label :content, 'タスク' %>
  <%= f.text_field :content %>

  <%= f.label :status, 'ステータス' %>
  <!--<%= f.text_field :status %>-->
  <%= f.select :status, [["開始前", "開始前"], ["進行中", "進行中"], ["完了", "完了"]] %>

  <%= f.submit '投稿' %>
<% end %>